.foot-nav {
  display: flex;
  flex-direction: row;
  width:100%;
  height:110rpx;
  position: fixed;
  bottom: 0;
  z-index: 9999;
  border-top:2rpx solid #f4f4f4;
  box-sizing:border-box;
  color:#999;
  background:#fff;
}
.foot-nav .tab-bar-item {
  position:relative;
  font-size: 28rpx;
  width:20%;
  height:110rpx;
  display: flex;
  flex:1;
  flex-direction: column;
  text-align: center;
  bottom:-5rpx;
}
.foot-nav .tab-bar-item .img-box {
  top: 15rpx;
  position: relative;
}
.foot-nav .tab-bar-item:nth-child(2) .img-box {
  top: -40rpx;
  position: relative;
}
.foot-nav .tab-bar-item image {
  display: block;
  width:50rpx;
  height:50rpx;
  margin:0 auto 10rpx;
}
.foot-nav navigator:nth-child(2){
  position: relative;
  top:-70rpx;
}
.foot-nav .tab-bar-item:nth-child(2) image{
  width:100rpx;
  height:100rpx;
  border-radius:50%;
  /* border: 15rpx solid #fff; */
}
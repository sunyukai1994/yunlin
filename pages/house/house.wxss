.position-area{
  font-size: 28rpx;
  margin-top: 10rpx;
}
.position-one{
  display: flex;
  /* padding-top: 50rpx; */
  font-size: 20rpx;
  margin-top: 10rpx;
}
.position-two{
  width: 80rpx;
  height: 35rpx;
  text-align: center;
  line-height: 1.7;
  background-color: #e8eced;
  border-radius: 10rpx;
  margin-right: 5rpx;
}
.price{
  margin-left: 22rpx;
  color: #ff0000;
  margin-top: 0rpx;
  font-size: 45rpx;
  letter-spacing: 0rpx;
}
.price text{
  font-size: 20rpx;
}
/* pages/medicalCare/medicalCare.wxss */
page{
  background-color: #ededed;
}
.top{
  width: 100%;
  height: 280rpx;
  /* display: flex; */
  flex-direction: row;
  background-color: #fff;
  /* margin-top: 20rpx; */
}
.information{
  width: 100%;
  display: flex;
  flex-direction: row;
  /* background-color: #fff; */
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-left: 5%;
  margin-right: 20rpx;
  margin-top: 25rpx;
  /* margin-bottom: 20rpx; */
  border-radius: 50%;
}
.userinfo-nickname {
  margin-bottom: 10px;
  color: #425966;
}
.right{
  margin-left: 10px;
  margin-top: 30px;
  font-size: 40rpx;
}
.mode{
  display: flex;
  width: 100%;
  height: 50rpx;
  text-align: center;
  font-size: 35rpx;
  margin-top: 50rpx;
}
.default{
  color: #646260;
}
.red{
  color: #d7450b;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
.mode-left{
  width: 50%;
  /* background-color: cadetblue; */
}
.mode-xian{
  border-right: 1rpx solid #b5b5b5;
}
.mode-right{
  width: 50%;
  /* background-color: chocolate; */
}
/* 医生联系电话 */
.phone{
  display: flex;
  align-items: center;
  width: 92%;
  height: 80rpx;
  margin: 0 auto;
  border-radius: 25rpx;
  background-color: #fff;
  margin-top: 15rpx;
}
.phone image{
  width: 50rpx;
  height: 50rpx;
  margin-left: 125rpx;
}
.phone-details{
  font-size: 28rpx;
  color: #f41010;
  font-weight: 500;
  margin-left: 15rpx;
}
/* 预约挂号 */
.register{
  width: 92%;
  height: 900rpx;
  border-radius: 25rpx;
  background-color: #fff;
  margin: 0 auto;
  margin-top: 25rpx;
}
.register-title{
  width: 100%;
  height: 80rpx;
  background-color: #1e76a9;
  border-radius: 25rpx 25rpx 0 0;
  font-size: 35rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
  line-height: 2.5;
  letter-spacing: 2rpx;
}
.register-text{
  position: relative;
  width: 92%;
  height: 300rpx;
  background-color: #eeeeee;
  margin: 0 auto;
  margin-top: 15rpx;
}
.geren{
  position: absolute;
  /* font-weight: bolder; */
  top: 30rpx;
  left: 5%;
  color: #8a8a8a;
}
.neirong{
  position: absolute;
  width: 100%;
  height: 300rpx;
  left: 7%;
  color: #797979
}
.my-phone{
  position: relative;
  /* display: flex; */
  width: 92%;
  height: 100rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid #dfdfdf;
}
.my-phone-text{
  position: absolute;
  /* font-weight: bolder; */
  top: 30rpx;
  /* left: 5% */
}
.num{
  color: #797979;
  margin-top: 30rpx;
  text-align: right
}
.shuju{
  float: right;
}
.btn{
  margin-top: 10rpx;
  margin-bottom: 1rpx;
  background: #1e76a9;
  width: 92%!important;
  text-align: center;
  /* font-size: 30rpx; */
  font-weight: bold;
  color: #fff;
  letter-spacing: 2rpx;
}
.secede-btn{
margin-top: 80rpx;
}
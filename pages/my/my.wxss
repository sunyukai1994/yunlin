/* 获取用户手机号 */
.get-phone {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  background-color: rgba(0, 0, 0, .3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.get-phone .get-box {
  border-radius: 20rpx;
  background-color: #fff;
  padding: 80rpx 50rpx;
}

.get-phone .get-box button {
  width: 250rpx;
  height: 70rpx;
  background-color: #d81e06;
  color: #fff;
  font-size: 32rpx;
  line-height: 70rpx;
  padding: 0;
  margin: 0;
  border: none;
}

.get-phone .get-box button::after {
  border: none
}


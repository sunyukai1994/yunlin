/* 公告 */
.form{
  width: 92%;
  height: 280rpx;
  margin-left: 4%;
  /* position: absolute; */
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
}
.form-inside{
  display: flex;
  position: absolute;
  width: 92%;
  height: 200rpx;
  margin: 40rpx auto;
  background-color: #fff;
}
.form-image{
  width: 41%;
  height: 100%;
  /* background-color: bisque; */
}
.form-image image{
  width: 100%;
  height: 100%;
}
.form-text{
  width: 56.5%;
  height: 100%;
  margin-left: 2.5%;
  /* background-color: cadetblue; */
}
.form-text-title{
  font-size: 28rpx;
  letter-spacing: -1rpx;
}
.form-text-bottom{
  /* display: flex; */
  width: 100%;
  margin-top: 93rpx;
}
.comment{
  float: left;
  font-size: 26rpx;
}
.browse{
  float: right;
  font-size: 26rpx;
  color: #cd2727;
}
.browse text{
  font-size: 26rpx;
  color: #302d2d;
}
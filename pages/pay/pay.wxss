/* pages/pay/pay.wxss */
.pay{
  width: 100%;
  background-color: #fff;
}
/* header 头部 */
.header{
  width: 100%;
  height: 220rpx;
  background-color: #fff;
  /* display: flex; */
}
.header-search{
  width: 100%;
  height: 50rpx auto;
  display: flex;
  background-color: #fff;
}
.fanhui{
  width: 40rpx;
  height: 40rpx;
  margin-top: 35rpx;
  margin-left: 20rpx;
  /* z-index: 1; */
}
.search{
  width: 670rpx;
  margin-left: 40rpx;
  /* z-index: 0; */
}
.header-tab{
  width: 60%;
  display: flex;
  margin: 0 auto;
  margin-top: 40rpx;
  align-items: center;
  font-size: 35rpx;
  /* letter-spacing: 25rpx; */
}
.header-left-image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.default{
  color: #646260;
}
.red{
  color: #d7450b;
  font-weight: bold;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
.header-left-text{
  /* color: #f10606; */
  /* font-weight: bold; */
  display: flex;
}
.header-zhixian{
  width: 0.5rpx;
  height: 50rpx;
  border: 0.25rpx solid #c3c3c3;
  margin: 0 auto;
}
.header-right-text{
  display: flex;
}
.header-right-image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
/* 缴费详情 */
.details{
  display: flex;
  width: 92%;
  height: 190rpx;
  margin: 0 auto;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  /* background-color: aqua; */
}
.details-left{
  width: 49%;
  height: 100%;
  background-color: #f1f5ff;
  border-radius: 15rpx;
}
.details-right{
  width: 49%;
  height: 100%;
  margin-left: 2%;
  background-color: #f1f5ff;
  border-radius: 15rpx;
}
.details-left-title{
  padding-left: 5%;
  padding-top: 8%;
  font-size: 35rpx;
  /* font-weight: 600; */
}
.details-left-btn{
  /* display: flex; */
  width: 90%;
  margin: 0 auto;
  margin-top: 19%;
}
.details-left-btn text{
  /* padding-left: 5%; */
  /* padding-right: 10%; */
  font-size: 28rpx;
  color: #ff5530;
}
.left-btn{
  float: right;
  margin-top: 1rpx;
  margin-bottom: 1rpx;
  /* margin-left: 10%; */
  background: #f29b76;
  width: 40% !important;
  /* width: 45%!important; */
  height: 40rpx !important;
  text-align: center;
  font-size: 20rpx;
  font-weight: bold;
  color: #fff;
  line-height: 0.5;
  padding-left: 0rpx;
  margin-left: 0rpx;
  padding-right: 0rpx;
  margin-right: 0rpx;
  /* letter-spacing: 6rpx; */
}